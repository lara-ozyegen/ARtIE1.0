<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="370dp"
        android:background="@color/colorMainTheme"
        android:text="Add Models"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/myModelsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="370dp"
        android:background="@color/colorMainTheme"
        android:text="MY MODELS"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/mathButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="200dp"
        android:background="@color/colorMainTheme"
        android:text="Mathematics"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/biologyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="200dp"
        android:background="@color/colorMainTheme"
        android:text="Biology"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/spaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorMainTheme"
        android:text="SPACE"
        android:textColor="#F8F8F8" />

    <Button
        android:id="@+id/chemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorMainTheme"
        android:text="Chemistry"
        android:textColor="#FBFBFB" />

    <ImageView
        android:id="@+id/bio"
        android:layout_width="156dp"
        android:layout_height="147dp"
        android:layout_above="@+id/biologyButton"
        android:layout_alignEnd="@+id/biologyButton"
        android:layout_alignRight="@+id/biologyButton"
        android:layout_marginEnd="-30dp"
        android:layout_marginRight="-30dp"
        android:layout_marginBottom="-17dp"
        app:srcCompat="@drawable/bio_icon"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/myModels"
        android:layout_width="148dp"
        android:layout_height="92dp"
        android:layout_above="@+id/myModelsButton"
        android:layout_alignEnd="@+id/myModelsButton"
        android:layout_alignRight="@+id/myModelsButton"
        android:layout_marginEnd="-27dp"
        android:layout_marginRight="-27dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/mymodels_icon" />

    <ImageView
        android:id="@+id/chemistry"
        android:layout_width="153dp"
        android:layout_height="101dp"
        android:layout_above="@+id/chemButton"
        android:layout_alignEnd="@+id/chemButton"
        android:layout_alignRight="@+id/chemButton"
        android:layout_marginEnd="-31dp"
        android:layout_marginRight="-31dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/chem_icon" />

    <ImageView
        android:id="@+id/maths"
        android:layout_width="96dp"
        android:layout_height="102dp"
        android:layout_above="@+id/mathButton"
        android:layout_alignEnd="@+id/mathButton"
        android:layout_alignRight="@+id/mathButton"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="9dp"
        app:srcCompat="@drawable/math_icon" />

    <ImageView
        android:id="@+id/space"
        android:layout_width="99dp"
        android:layout_height="98dp"
        android:layout_above="@+id/spaceButton"
        android:layout_alignEnd="@+id/spaceButton"
        android:layout_alignRight="@+id/spaceButton"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginBottom="13dp"
        app:srcCompat="@drawable/space_icon" />

    <ImageView
        android:id="@+id/addModel"
        android:layout_width="101dp"
        android:layout_height="97dp"
        android:layout_above="@+id/addButton"
        android:layout_alignEnd="@+id/addButton"
        android:layout_alignRight="@+id/addButton"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/add_icon" />

</RelativeLayout>